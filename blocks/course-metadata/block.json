{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "title": "Course Metadata",
  "description": "Displays various course metadata",
  "name": "lithecourse/course-metadata",
  "version": "1.0.0",
  "category": "lithe-course",
  "icon": "info",
  "supports": {
    "html": false,
    "spacing": {
      "padding": true,
      "margin": true
    }
  },
  "attributes": {
    "courseId": {
      "type": "number"
    },
    "metaType": {
      "type": "string",
      "default": "features",
      "enum": ["features", "prerequisites", "learnings", "suitableFor"]
    },
    "listStyle": {
      "type": "string",
      "default": "disc"
    },
    "columns": {
      "type": "number",
      "default": 1
    }
  },
  "textdomain": "lithe-course",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./style.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
