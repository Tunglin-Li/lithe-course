{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "lithe-course/lesson-sidebar",
  "version": "1.0.0",
  "title": "Lesson Sidebar",
  "category": "lithe-course",
  "icon": "editor-ul",
  "description": "Displays a list of course modules",
  "supports": {
    "html": false,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "courseId": {
      "type": "number"
    },
    "titleTextColor": {
      "type": "string",
      "default": "#000000"
    },
    "titleBackgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "lessonTextColor": {
      "type": "string",
      "default": "#454545"
    },
    "lessonBackgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "currentLessonColor": {
      "type": "string",
      "default": "#dddddd"
    },
    "borderRadius": {
      "type": "string",
      "default": "4px"
    },
    "style": {
      "type": "object"
    }
  },
  "textdomain": "lithe-course",
  "editorScript": "file:./index.js",
  "editorStyle": ["file:./editor.css", "file:./style.css"],
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
